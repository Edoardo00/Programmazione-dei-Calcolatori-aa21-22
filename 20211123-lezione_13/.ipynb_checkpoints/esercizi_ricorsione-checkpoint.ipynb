    "def pal_ric( a ):\n",
    "    if len(a) in (0, 1):\n",
    "        return True\n",
    "    else: # len(a) >= 2\n",
    "        if a[0] == a[-1]:\n",
    "            return pal_ric(a[1:-1])\n",
    "        else:\n",
    "            return False"
